{
  "name": "lispium",
  "displayName": "Lispium",
  "description": "Language support for Lispium - A Symbolic Computer Algebra System",
  "version": "0.3.2",
  "publisher": "tetraslam",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tetraslam/lispium"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "lispium",
    "lisp",
    "symbolic",
    "computer algebra",
    "cas",
    "mathematics"
  ],
  "activationEvents": [
    "onLanguage:lispium",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lispium",
        "aliases": [
          "Lispium",
          "lispium"
        ],
        "extensions": [
          ".lspm"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.svg",
          "dark": "./images/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "lispium",
        "scopeName": "source.lispium",
        "path": "./syntaxes/lispium.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Lispium",
      "properties": {
        "lispium.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the lispium executable. If empty, searches PATH."
        },
        "lispium.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "npm run esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
